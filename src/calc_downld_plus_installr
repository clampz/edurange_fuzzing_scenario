if [ $# -eq 2 ]; then

  wget $1
  FNAME="$(echo $1 | awk -F/ '{print $(NF)}')"
  gcc $FNAME -o $2 -lm
  submit_calc $2

else

  echo "[!] argcount error. "
  echo "Usage: calc_installer <link_to_get_calc> <desired_calc_fname>"
  exit

fi

